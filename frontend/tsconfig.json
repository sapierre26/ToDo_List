{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src/**/*", "frontend/src/api/**/*.test.ts", "babel.config.js"],
  "exclude": ["node_modules", "dist", "cypress"]
}
